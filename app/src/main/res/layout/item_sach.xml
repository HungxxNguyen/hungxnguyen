<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Thông tin sách (bên trái) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tenSachTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ngayXbTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày xuất bản"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/theLoaiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/idTacGiaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tác giả"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Các nút (bên phải) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <ImageView
            android:id="@+id/editButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Chỉnh sửa"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Xóa"
            android:src="@android:drawable/ic_menu_delete" />
    </LinearLayout>
</LinearLayout>